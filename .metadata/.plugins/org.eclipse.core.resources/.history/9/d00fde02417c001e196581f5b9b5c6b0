/* Public function prototypes
 *
 *  */



#include <stdint.h>		// Incluir libreria para tipo de dato entero de ancho fijo
#include <stdbool.h>	// Incluir libreria para tipos de datos booleanos

typedef uint32_t tick_t;	// Defiine tipo de dato booleano
typedef bool bool_t;		// Define tipo de dato booleano

typedef struct{
   tick_t startTime;	// Tiempo en que inicia el retardo
   tick_t duration;
   bool_t running;
} delay_t;				// Definicion de estructura para los retardos


// Declaracion de funciones a utilizar para implementar los retardos no bloqueantes

void delayInit( delay_t * delay, tick_t duration );
bool_t delayRead( delay_t * delay );
void delayWrite( delay_t * delay, tick_t duration );
